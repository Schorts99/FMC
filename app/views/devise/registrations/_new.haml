= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
	= devise_error_messages!
	.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
		= f.email_field :email, autofocus: true, class:"mdl-textfield__input"
		= f.label :email, "Correo electrónico", class:"mdl-textfield__label grey-text"
	.row
		.col-xs-6.col-md-6
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :name, autofocus: true, class:"mdl-textfield__input"
				= f.label :name, "Nombre", class:"mdl-textfield__label grey-text"
		.col-xs-6.col-md-6
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :last_name, autofocus: true, class:"mdl-textfield__input"
				= f.label :last_name, "Apellidos", class:"mdl-textfield__label grey-text"
	.row
		.col-xs-5.col-md-4
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :rfc, autofocus: true, class:"mdl-textfield__input"
				= f.label :rfc, "RFC", class:"mdl-textfield__label grey-text"
		.col-xs-4.col-md-4
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :grade, autofocus: true, class:"mdl-textfield__input"
				= f.label :grade, "Semestre", class:"mdl-textfield__label grey-text"
		.col-xs-3.col-md-4
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :group, autofocus: true, class:"mdl-textfield__input"
				= f.label :group, "Grupo", class:"mdl-textfield__label grey-text"
	.row
		.col-xs-6.col-md-6
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.password_field :password, autofocus: true, class:"mdl-textfield__input"
				= f.label :password, "Contraseña", class:"mdl-textfield__label grey-text"
		.col-xs-6.col-md-6
			.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.password_field :password_confirmation, autofocus: true, class:"mdl-textfield__input"
				= f.label :password_confirmation, "Confirmar contraseña", class:"mdl-textfield__label grey-text"
	.top-space
		.row.middle-xs.text-left
			.col-xs-7.col-md-6
				=f.submit "Registrar", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
			.col-xs-5.col-md-6
				=link_to "Ya tengo cuenta", new_student_session_path, class:"white-text underline"